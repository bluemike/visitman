<table class="table table-striped table-bordered" valign="middle">

    <thead>
    <tr>
	<th>Code</th>
    <th>Vorname</th>
    <th>Name</th>
	<th>Kurzform</th>
    <th>Email</th>
	<th>Klasse</th>
    </tr>
    </thead>

	<tbody>

	<% @teachers.each do |teacher| %>
		<tr>
		<td><%= teacher.code %></td>
		<td><%= teacher.firstname %></td>
		<td><%= teacher.name %></td>
		<td><%= teacher.abbreviation %></td>
		<td><%= teacher.email %></td>
		<td><%= teacher.getTeamTitle %></td>
		</tr>
	<% end %>

	</tbody>


</table>

