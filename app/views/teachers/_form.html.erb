<%= simple_form_for @teacher,
                    wrapper: :horizontal_form,
                    html: { class: 'form-horizontal' },
                    wrapper_mappings: {
                            check_boxes: :horizontal_radio_and_checkboxes,
                            radio_buttons: :horizontal_radio_and_checkboxes,
                            file: :horizontal_file_input,
                            boolean: :horizontal_boolean
                    } do |f| %>

    <%= f.error_notification %>

    <%= f.input :abbreviation, label: 'Kurzform', placeholder: 'Kurzform', input_html: { maxlength: 255 } %>

    <%= f.input :firstname, label: 'Vorname', placeholder: 'Vorname', input_html: { maxlength: 255 } %>

    <%= f.input :name, label: 'Name', placeholder: 'Name', input_html: { maxlength: 255 } %>

    <%= f.input :email, label: 'Email', placeholder: 'Email', input_html: { maxlength: 255 } %>

    <%= f.input :room_title, label: 'Raum', placeholder: 'Raum', input_html: { maxlength: 255 } %>

    <%= f.input :team_id, collection: getTeamCollectionbyEventId(getLoginEventId), include_blank: true, label: 'Klassenlehrkraft bei'%>

    <%= f.button :submit, 'Speichern', class: 'btn btn-primary' %>

    <%= link_to "Abbrechen", :back, :class => 'btn btn-info' %>

<% end %>


