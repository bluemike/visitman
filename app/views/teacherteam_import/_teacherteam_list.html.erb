<table class="table table-striped table-bordered" valign="middle">

    <thead>
    <tr>
	<th>Lehrer</th>
	<th>Klasse</th>
    </tr>
    </thead>

	<tbody>

	<% @teacherteams.each do |teacherteam| %>
		<% teacher = Teacher.find(teacherteam.teacher_id) %>
		<% team = Team.find(teacherteam.team_id) %>
		<tr>
		<td><%= "%s %s (%s)" % [teacher.firstname, teacher.name, teacher.abbreviation] %></td>
		<td><%= team.title %></td>
		</tr>
	<% end %>

	</tbody>


</table>

